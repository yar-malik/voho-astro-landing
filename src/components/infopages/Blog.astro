 const reversedBlogs = [...blogs].reverse();

const blogContainer = document.getElementById("blog-container");
const nextBtn = document.getElementById("next-btn");
const prevBtn = document.getElementById("prev-btn");
const nextBtnDesktop = document.getElementById("next-btn-desktop");
const prevBtnDesktop = document.getElementById("prev-btn-desktop");
const pageNumberContainer = document.getElementById("pagination-numbers");
const startCountEl = document.getElementById("start-count");
const endCountEl = document.getElementById("end-count");
const totalCountEl = document.getElementById("total-count");

let currentPage = 1;
const blogsPerPage = 4;
const totalBlogs = reversedBlogs.length;
const totalPages = Math.ceil(totalBlogs / blogsPerPage);

function showBlogsForPage(page) {
  const start = (page - 1) * blogsPerPage;
  const end = Math.min(start + blogsPerPage, totalBlogs);

  blogContainer.innerHTML = reversedBlogs
    .slice(start, end)
    .map(
      (blog) => `
        <div class="blog-card w-full mx-auto border  border-gray-200 rounded-lg overflow-hidden bg-white hover:shadow-2xl transition duration-300">
          <a href="${blog.link}">
            <img src="${blog.image}" alt="Image for ${blog.title}" class="w-full h-[20vh] object- !important" style="height: 30vh !important;"  />
          </a>
          <div class="p-4">
            <h3 class="text-lg font-semibold mb-2">${blog.title}</h3>
            <p class="text-gray-600 text-sm">${blog.description}</p>
          </div>
        </div>
      `
    )
    .join("");

  startCountEl.textContent = start + 1;
  endCountEl.textContent = end;
  totalCountEl.textContent = totalBlogs;

  prevBtn.style.display = nextBtn.style.display = prevBtnDesktop.style.display = nextBtnDesktop.style.display = "block";
  if (page === 1) prevBtn.style.display = prevBtnDesktop.style.display = "none";
  if (page === totalPages) nextBtn.style.display = nextBtnDesktop.style.display = "none";

  updatePaginationUI();
}

function updatePaginationUI() {
  pageNumberContainer.innerHTML = "";

  for (let i = 1; i <= totalPages; i++) {
    const pageButton = document.createElement("a");
    pageButton.href = "#";
    pageButton.className = `relative inline-flex items-center px-4 py-2 text-sm font-semibold ${
      i === currentPage ? "bg-indigo-600 text-white" : "text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
    }`;
    pageButton.textContent = i;
    pageButton.addEventListener("click", (e) => {
      e.preventDefault();
      currentPage = i;
      showBlogsForPage(currentPage);
    });
    pageNumberContainer.appendChild(pageButton);
  }
}

nextBtn.addEventListener("click", () => {
  if (currentPage < totalPages) {
    currentPage++;
    showBlogsForPage(currentPage);
  }
});

prevBtn.addEventListener("click", () => {
  if (currentPage > 1) {
    currentPage--;
    showBlogsForPage(currentPage);
  }
});

nextBtnDesktop.addEventListener("click", () => {
  if (currentPage < totalPages) {
    currentPage++;
    showBlogsForPage(currentPage);
  }
});

prevBtnDesktop.addEventListener("click", () => {
  if (currentPage > 1) {
    currentPage--;
    showBlogsForPage(currentPage);
  }
});

showBlogsForPage(currentPage);
