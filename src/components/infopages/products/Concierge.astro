---
import LogoSlider from "../../global/slider/LogoSlider";
import Pricing from "../../landing/Pricing.astro";
import Faq from "./components/faq.astro";
import Testimonial from "./components/ProduuctTestimonials.astro";
import Integration from "./components/Integration.astro";
import Discover from './components/discover.astro'
---

<section class="bg-g max-w-6xl mx-auto justify-center text-gray-800">
  <!-- Hero Section -->
  <div
    class="hero-section bg-black text-white rounded-lg text-center py-16 px-4 relative"
  >
    <!-- Background Image -->
    <div
      class="absolute inset-0 bg-cover bg-center rounded-lg"
      style="background-image: url('/images/projects/AI Concierge Service.png');"
    >
    </div>
    <!-- Light Color Overlay -->
    <div class="absolute inset-0 bg-black opacity-50 rounded-lg"></div>

    <!-- Content -->
    <div class="relative">
      <h1 class="text-4xl font-bold">AI Concierge Service</h1>
      <p class="mt-4 text-lg">
        Elevate customer experience with personalized, 24/7 AI-powered concierge
        assistance.
      </p>
      <a
        href="/get-started"
        class="inline-block mt-6 bg-white text-black font-semibold py-3 px-6 rounded-lg hover:bg-gray-200"
      >
        Try It Now for Free
      </a>
    </div>
  </div>

  <!-- Features Section -->
  <div class="features-section text-center container mx-auto py-16 px-4">
    <h2 class="text-4xl tracking-tight font-semibold text-black md:text-5xl font-display mb-8">Key Features</h2>
    <div>
      <div
        class="grid gap-12 grid-cols-1 lg:space-y-0 lg:text-center md:grid-cols-3"
      >
        <!-- Feature 1 -->
        <div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
            <img src="/images/svgs/Personalized Assistance.svg" alt="Personalized Assistance" />
            </div>
            <p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              Personalized Assistance
            </p>
          </div>
          <div class="mt-4 text-gray-500 text-sm">
            Provide tailored recommendations and support based on user
            preferences.
          </div>
        </div>

        <!-- Feature 2 -->
        <div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
            <img src="/images/svgs/Seamless Bookings.svg" alt="Seamless Bookings" />
            </div>
            <p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              Seamless Bookings
            </p>
          </div>
          <div class="mt-4 text-gray-500 text-sm">
            Assist customers in booking appointments, reservations, and tickets
            effortlessly.
          </div>
        </div>

        <!-- Feature 3 -->
        <div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
            <img src="/images/svgs/24 Availability.svg" alt="24 Availability" />
            </div>
            <p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              24/7 Availability
            </p>
          </div>
          <div class="mt-4 text-gray-500 text-sm">
            Ensure your guests have uninterrupted access to concierge services
            at all hours.
          </div>
        </div>

        <!-- Feature 4 -->
        <div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
            <img src="/images/svgs/Real-Time Updates.svg" alt="Real-Time Updates" />
            </div>
            <p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              Real-Time Updates
            </p>
          </div>
          <div class="mt-4 text-gray-500 text-sm">
            Keep customers informed with real-time updates about schedules and
            changes.
          </div>
        </div>

        <!-- Feature 5 -->
        <div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
            <img src="/images/svgs/Multilingual Support.svg" alt="Multilingual Support" />
            </div>
            <p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              Multilingual Support
            </p>
          </div>
          <div class="mt-4 text-gray-500 text-sm">
            Cater to a diverse audience with support in multiple languages.
          </div>
        </div>

        <!-- Feature 6 -->
        <div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
            <img src="/images/svgs/Intelligent Suggestions.svg" alt="Intelligent Suggestions" />
            </div>
            <p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              Intelligent Suggestions
            </p>
          </div>
          <div class="mt-4 text-gray-500 text-sm">
            Provide smart suggestions to enhance customer satisfaction and
            loyalty.
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Discover Section -->
<Discover />

  <!--  Slider -->
  <section class="my-12 py-12 px-6">
    <div class="text-left gap-10 mb-8 flex justify-between">
      <h2 class="text-4xl tracking-tight font-semibold text-black md:text-5xl font-display">
        Connect CallSupport to Your Existing System
      </h2>
      <p class="text-gray-500 max-w-2xl text-2xl mx-auto mb-8">
        Maximize efficiency by integrating CallSupport with platforms like
        HubSpot, GoHighLevel, Zoho, and other CRM or booking systems. Enhance
        the consistency of customer interactions across all channels seamlessly.
      </p>
    </div>
    <div>
      <LogoSlider client:only="react" />
    </div>
  </section>

  <!-- Integration Section -->
  <Integration />
  
  <!-- Pricing  Section -->
  <Pricing />

  <!-- Testimonial Section -->
  <Testimonial />

  <!-- Ai FAQ Section -->
  <Faq />
</section>
