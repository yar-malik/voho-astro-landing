---
import Pricing from "../../landing/Pricing.astro";
import LogoSlider from "../../global/slider/LogoSlider.jsx";
import Testimonial from "./components/ProduuctTestimonials.astro";
import Faq from "./components/faq.astro";
import Integration from "./components/Integration.astro";
import Discover from './components/discover.astro'
---

<div class="bg-white max-w-6xl mt-4  mx-auto justify-center text-gray-500">
  <!-- Hero Section -->
  <div
    class="hero-section bg-black rounded-lg text-white text-center py-16 px-4 relative overflow-hidden"
  >
    <!-- Background Image -->
    <div
      class="absolute inset-0 bg-cover bg-top rounded-lg"
      style="background-image: url('/images/compressed/Al Receptionist-min.png');"
    >
    </div>
    <!-- Light Color Overlay -->
    <!-- <div class="absolute inset-0 bg-black opacity-50 rounded-lg"></div> -->

    <!-- Content -->
    <div class="relative z-10">
      <h1 class="text-4xl font-bold">AI Receptionist</h1>
      <p class="mt-4 text-lg">
        Automate your inbound calls with our 24/7 AI-powered receptionist.
      </p>
      <a
        href="/get-started"
        class="inline-block mt-6 bg-white text-black font-semibold py-3 px-6 rounded-lg hover:bg-gray-200"
      >
        Get Started for Free
      </a>
    </div>
  </div>

  <!-- Features Section -->
  <div class="features-section text-center container mx-auto py-16 px-4">
    <h2
      class="text-4xl tracking-tight font-semibold text-black md:text-5xl font-display mb-8"
    >
      Key Features
    </h2>
    <div>
      <div
        class="grid gap-12 grid-cols-1 lg:space-y-0 lg:text-center md:grid-cols-3"
      >
        <div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
              <img src="/images/svgs/setup.svg" alt="       Quick Setup" />
            </div><p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              Quick Setup
            </p>
          </div><div class="mt-4 text-gray-500 text-sm">
            Configure in minutes without developer assistance.
          </div>
        </div><div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
              <img src="/images/svgs/Cost-Efficient.svg" alt="Cost-Efficient" />
            </div><p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              Cost-Efficient
            </p>
          </div><div class="mt-4 text-gray-500 text-sm">
            Scale your operations without increasing overhead.
          </div>
        </div><div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
              <img
                src="/images/svgs/24 Availability.svg"
                alt="24 Availability"
              />
            </div><p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              24/7 Availability
            </p>
          </div><div class="mt-4 text-gray-500 text-sm">
            Never miss a call, day or night.
          </div>
        </div><div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
              <img src="/images/svgs/Customizable.svg" alt="Customizable" />
            </div><p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              Customizable
            </p>
          </div><div class="mt-4 text-gray-500 text-sm">
            Tailor responses to fit your business needs.
          </div>
        </div><div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
              <img
                src="/images/svgs/Multilingual Support.svg"
                alt="Multilingual Support"
              />
            </div><p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              Multilingual Support
            </p>
          </div><div class="mt-4 text-gray-500 text-sm">
            Communicate with customers in multiple languages.
          </div>
        </div><div>
          <div>
            <div
              class="items-center justify-center text-accent-500 bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto"
            >
              <img
                src="/images/svgs/User-Friendly Dashboard.svg"
                alt="User-Friendly Dashboard "
              />
            </div><p
              class="mt-4 text-lg font-semibold leading-6 text-black font-display tracking-tight"
            >
              User-Friendly Dashboard
            </p>
          </div><div class="mt-4 text-gray-500 text-sm">
            Manage and monitor calls with ease.
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Discover Section -->
<Discover />

  <!--  Slider -->
  <section class="my-12 py-12 px-6 ">
    <img src="/images/compressed/Integration image-min.png" alt="Integration" />
 
  </section>

  <!-- Integration Section -->

  <Integration />

  <!-- Testimonial Section -->

  <!-- <Testimonial /> -->

  <!-- Ai FAQ Section -->
  <Faq />

  <!-- Pricing Section -->
  <Pricing />
</div>
